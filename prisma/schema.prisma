generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Job {
  id          String   @id @default(cuid())
  userId      String   // ID do usuário do Clerk
  title       String
  company     String
  location    String?
  type        JobType  @default(FULL_TIME)
  mode        JobMode  @default(REMOTE)
  status      JobStatus @default(APPLIED)
  description String?
  requirements String?
  salary      String?
  benefits    String?
  applicationUrl String?
  applicationEmail String?
  notes       String?
  appliedAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("jobs")
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  FREELANCE
}

enum JobMode {
  REMOTE
  HYBRID
  ONSITE
}

enum JobStatus {
  APPLIED     // Candidatura enviada
  TEST_PENDING   // Teste pendente
  TEST_COMPLETED // Teste concluído
  INTERVIEW   // Em processo de entrevista
  ACCEPTED    // Aceito
  REJECTED    // Rejeitado
}

model RejectedJobLog {
  id         String   @id @default(cuid())
  userId     String
  title      String
  company    String
  rejectedAt DateTime @default(now())

  @@map("rejected_jobs")
}
